{
  "name": "gastroelite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:network": "next dev --hostname 0.0.0.0",
    "build": "prisma generate && (npm run migrate:baseline; npm run migrate:deploy || npm run migrate:deploy:safe) && next build",
    "start": "next start",
    "lint": "eslint",
    "init-db": "tsx src/lib/init-db.ts",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:baseline": "node scripts/baseline-existing-migrations.js || true",
    "migrate:deploy:safe": "prisma migrate deploy || node scripts/check-and-create-table.js || true"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@prisma/extension-accelerate": "^3.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.2",
    "@vercel/blob": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.2",
    "next": "15.5.7",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.7",
    "prisma": "^6.16.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
